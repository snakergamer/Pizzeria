<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro - Pizzería</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container" style="max-width: 400px; margin-top: 5vh;">
        <div class="card">
            <h1>Registro</h1>
            
            <% if (error) { %>
                <div class="error-message" style="display: block; background: #ff6b6b; color: white; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (success) { %>
                <div class="success-message" style="display: block; background: #4ecdc4; color: #16213e; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= success %>
                </div>
            <% } %>
            
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="username">Nombre de Usuario</label>
                    <input type="text" id="username" name="username" required 
                           minlength="3" maxlength="16">
                </div>
                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" id="email" name="email" required 
                           maxlength="50">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" required 
                           minlength="8" maxlength="8">
                </div>
                <div class="form-group">
                    <label for="confirm">Confirmar Contraseña</label>
                    <input type="password" id="confirm" name="confirm" required 
                           minlength="8" maxlength="8">
                </div>
                <button type="submit">Registrarse</button>
            </form>
            <p style="text-align: center; margin-top: 1rem;">
                ¿Ya tienes una cuenta? <a href="/" style="color: var(--secondary-color);">Inicia sesión aquí</a>
            </p>
        </div>
    </div>
    
    <script>
        // Validación en cliente
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirm = document.getElementById('confirm').value;
            const username = document.getElementById('username').value;
            
            if (password !== confirm) {
                e.preventDefault();
                alert('Las contraseñas no coinciden');
                return false;
            }
            
            if (!/^[A-Za-z0-9]+$/.test(username)) {
                e.preventDefault();
                alert('El nombre solo puede contener letras y números');
                return false;
            }
            
            return true;
        });
    </script>
</body>
</html>